{
  "name": "iku-cabalactiva",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "update-articles": "node scripts/update-lead-magnets.js",
    "watch-articles": "node scripts/watch-articles.js",
    "dev": "vite",
    "build": "node scripts/generate-sitemap.js && vite build",
    "sitemap": "node scripts/generate-sitemap.js",
    "enable-section": "node scripts/enable-section.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "ci": "npm run lint && npm run test && npm run build",
    "docker:build": "docker build -t iku-cabalactiva .",
    "docker:run": "docker run -p 8080:80 iku-cabalactiva",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "deploy": "npm run build && gh-pages -d dist",
    "setup-crm": "node scripts/setup-crm.js",
    "deploy-crm": "node scripts/deploy-complete-system.js",
    "test-crm": "node scripts/test-crm-complete.js",
    "test-paypal": "node scripts/test-paypal-integration.js",
    "test-stripe": "node scripts/test-stripe-integration.js",
    "test-payments": "node scripts/test-complete-payment-flow.js",
    "test-contacts": "node scripts/test-contact-optimization.js",
    "diagnostico": "node scripts/diagnostico-sistema.js",
    "verify-phone": "node scripts/simple-phone-check.js",
    "backup": "node scripts/secure-backup.js",
    "test-zero-trust": "node scripts/test-zero-trust.js"
  },
  "dependencies": {
    "framer-motion": "^10.0.1",
    "mcp-sequentialthinking-tools": "github:spences10/mcp-sequentialthinking-tools",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.5",
    "react-hot-toast": "^2.4.0",
    "react-router-dom": "^6.8.1",
    "stripe": "^12.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "gh-pages": "^5.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "tailwindcss": "^3.2.7",
    "terser": "^5.36.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
